<resources>

    <style name="CampGladiator.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="CampGladiator" parent="CampGladiator.Base">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CampGladiator.Dark" parent="CampGladiator.Base">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Button.SearchHere" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorDisplayText</item>
        <item name="android:background">@drawable/background_search_here</item>
        <item name="android:textAppearance">@style/TextAppearance.OnLightButton</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="TextAppearance.OnLightButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:color">@color/colorDisplayText</item>
        <item name="android:textColor">@color/colorDisplayText</item>
    </style>

</resources>
